{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "target": "ES6",
      "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["src/**/__stories__", "src/**/__fixtures__", "src/**/__tests__"]
  }
  